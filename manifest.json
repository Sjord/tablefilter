{
    "manifest_version": 3,

    "name": "Tablefilter",
    "description": "Filter tables",
    "version": "3.0.0",

    "action": {
        "default_icon": "filter.png",
        "default_title": "Tablefilter"
    },
    "permissions": [
        "declarativeContent",
        "activeTab",
        "scripting"
    ],
    "optional_host_permissions": [
        "https://*/",
        "http://*/"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
